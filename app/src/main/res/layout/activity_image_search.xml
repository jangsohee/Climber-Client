<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme">

    <RelativeLayout
        android:id="@+id/app_bar"
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:onClick="app_bar_click">

        <ImageButton
            android:id="@+id/finish_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:onClick="finish_button_click"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/image_search_layout"
        android:layout_weight="13"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:contentDescription="@string/add_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/add_image"
            android:id="@+id/add_image"
            android:layout_centerInParent="true"
            android:onClick="add_image"/>

        <ImageButton
            android:id="@+id/img_to_server"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/add_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/search_following"
            android:onClick="img_to_server"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/close_keyword"/>

        <TextView
            android:id="@+id/close_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_height="0dp">

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/close_image"/>

        <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/image_search_h_scroll">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id = "@+id/close_image_layout">
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coherent_layout"
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:layout_height="0dp">

        <TextView
            android:layout_margin="3dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/coherent_page"/>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id = "@+id/image_search_v_scroll">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id = "@+id/coherent_page_layout">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>